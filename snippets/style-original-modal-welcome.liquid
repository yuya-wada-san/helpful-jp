{% style %}
  .section--{{ section.id }} {
    margin: {{ section.settings.margin }};
    padding: {{ section.settings.padding }};
    background-color: rgba(0,0,0,0.5);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    width: 100%;
    height: 100%;
  }
  .section--{{ section.id }} .card-wrapper {
    margin: 20vh auto;
    padding: 20px;
    border-radius: 5px;
    border: solid 1px #333;
    background-color: #EEE;
    width: 80vw;
    height: 50vh;
    max-width: 300px;
    max-height: 450px;
    display: flex;
    flex-direction: column;
  }
  .section--{{ section.id }} .card-wrapper h3 {
    font-size: 1.5em;
    text-align: center;
  }
  .section--{{ section.id }} .card-wrapper .card-button-wrapper {
    margin-top: auto;
    margin-bottom: auto;
  }
  .section--{{ section.id }} .card-wrapper a {
    display: block;
    padding: 5px 5px 5px 10px;
    border-radius: 5px;
    background-color: #333;
    color: #EEE;
    margin-bottom: 15px;
    text-decoration: none;
    cursor: pointer;
  }
  .section--{{ section.id }} .card-wrapper button {
    display: block;
    margin: auto auto 0;
    padding: 3px 10px;
    border-radius: 0;
    border: solid 1px #999;
    color: #999;
    background-color: #EEE;
    cursor: pointer;
  }
{% endstyle %}